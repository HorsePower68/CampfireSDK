<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        style="@style/Scroll.Widget">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.sup.dev.android.views.settings.SettingsField
                android:id="@+id/vLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textAutoCorrect|textAutoComplete"
                android:singleLine="true"
                android:hint="@string/app_link" />

            <com.sup.dev.android.views.settings.SettingsField
                android:id="@+id/vLinkTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textAutoCorrect|textAutoComplete"
                android:singleLine="true"
                android:hint="@string/app_naming" />

            <com.sup.dev.android.views.settings.SettingsField
                android:id="@+id/vComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences|textAutoCorrect|textAutoComplete"
                android:hint="@string/moderation_widget_comment" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp">

                <com.sup.dev.android.views.views.ViewIcon
                    android:id="@+id/vIcon_0"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/Icon"
                    android:src="?ic_insert_link_24dp" />

                <com.sup.dev.android.views.views.ViewIcon
                    android:id="@+id/vIcon_1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/Icon"
                    android:src="?icon_youtube" />

                <com.sup.dev.android.views.views.ViewIcon
                    android:id="@+id/vIcon_2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/Icon"
                    android:src="?icon_discord" />

                <com.sup.dev.android.views.views.ViewIcon
                    android:id="@+id/vIcon_3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/Icon"
                    android:src="?icon_wiki" />

                <com.sup.dev.android.views.views.ViewIcon
                    android:id="@+id/vIcon_4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/Icon"
                    android:src="?icon_twitter" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <com.sup.dev.android.views.views.ViewIcon
                    android:id="@+id/vIcon_5"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/Icon"
                    android:src="?icon_steam" />

                <com.sup.dev.android.views.views.ViewIcon
                    android:id="@+id/vIcon_6"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/Icon"
                    android:src="?icon_gp" />

                <com.sup.dev.android.views.views.ViewIcon
                    android:id="@+id/vIcon_7"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/Icon"
                    android:src="?icon_app_store" />

                <com.sup.dev.android.views.views.ViewIcon
                    android:id="@+id/vIcon_8"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/Icon"
                    android:src="@drawable/icon_campfire" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <com.sup.dev.android.views.views.ViewButton
                    android:id="@+id/vCancel"
                    style="@style/Button.Text"
                    android:layout_marginEnd="8dp"
                    android:text="@string/app_cancel" />

                <com.sup.dev.android.views.views.ViewButton
                    android:id="@+id/vEnter"
                    style="@style/Button.Text"
                    android:text="@string/app_add" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>
