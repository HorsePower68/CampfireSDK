<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Root">


    <com.google.android.material.appbar.AppBarLayout style="@style/AppBar">

        <androidx.appcompat.widget.Toolbar
            style="@style/Toolbar"
            app:title="@string/about_creators">

            <com.sup.dev.android.views.views.ViewIcon
                android:id="@+id/vCopyLink"
                style="@style/Icon.Toolbar.Filtered"
                android:src="?ic_insert_link_24dp" />


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView style="@style/Scroll">

        <LinearLayout
            android:id="@+id/vSettingsContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?content_background"
                app:cardCornerRadius="12dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <com.sup.dev.android.views.views.ViewAvatarTitle
                        android:id="@+id/vPhotoZeon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        app:ViewAvatarTitle_subtitle="@string/about_creators_zeon_subtitle"
                        app:ViewAvatarTitle_title="@string/about_creators_zeon" />

                    <com.sup.dev.android.views.views.ViewIcon
                        android:id="@+id/vMoreZeon"
                        style="@style/Icon.18"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:src="@drawable/ic_more_vert_white_24dp" />

                </FrameLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="?content_background"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="12dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <com.sup.dev.android.views.views.ViewAvatarTitle
                        android:id="@+id/vPhotoSaynok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        app:ViewAvatarTitle_subtitle="@string/about_creators_saynok_subtitle"
                        app:ViewAvatarTitle_title="@string/about_creators_saynok" />

                    <com.sup.dev.android.views.views.ViewIcon
                        android:id="@+id/vMoreSaynok"
                        style="@style/Icon.18"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:src="@drawable/ic_more_vert_white_24dp" />

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?content_background"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="12dp">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <com.sup.dev.android.views.views.ViewAvatarTitle
                        android:id="@+id/vPhotoEgor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        app:ViewAvatarTitle_subtitle="@string/about_creators_egor_subtitle"
                        app:ViewAvatarTitle_title="@string/about_creators_egor" />

                    <com.sup.dev.android.views.views.ViewIcon
                        android:id="@+id/vMoreEgor"
                        style="@style/Icon.18"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:src="@drawable/ic_more_vert_white_24dp" />


                </FrameLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="?content_background"
                app:cardCornerRadius="12dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <com.sup.dev.android.views.views.ViewAvatarTitle
                        android:id="@+id/vPhotoTurbo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        app:ViewAvatarTitle_subtitle="@string/about_creators_turbo_subtitle"
                        app:ViewAvatarTitle_title="@string/about_creators_turbo" />

                    <com.sup.dev.android.views.views.ViewIcon
                        android:id="@+id/vMoreTurbo"
                        style="@style/Icon.18"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:src="@drawable/ic_more_vert_white_24dp" />

                </FrameLayout>


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>